<div class="row">
  <% @posts.each do |post| %>
    <div class="col-sm-6 col-md-12">
      <div class="thumbnail">
        <img class="pull-right" src="<%= @user.avatar %>">
        <div class="caption">
          <h3><%= @user.name %></h3>
          <p><%= post.description %></p>
          <p><%= post.url %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>